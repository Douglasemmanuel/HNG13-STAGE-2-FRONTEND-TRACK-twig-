<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Active Tickets</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table-responsive {
      max-height: 60vh;
      overflow-y: auto;
    }
    .badge {
      font-size: 0.85rem;
      padding: 0.4em 0.7em;
    }
    .container-header {
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      margin-bottom: 1.5rem;
    }
    .container-header button {
      position: absolute;
      left: 0;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <!-- Header -->
    <div class="container-header">
      <button id="backBtn" class="btn btn-primary btn-sm">Back</button>
      <h2 class="mb-0">Active Tickets</h2>
    </div>

    <!-- Ticket Table -->
    <div id="ticketContainer" class="table-responsive text-center">
      Loading tickets...
    </div>
  </div>

  <script>
    // Example data (simulate store)
    const tickets = [
      { id: 1, title: 'Login Bug', description: 'Cannot login to dashboard', assignee: 'Alice', status: 'Open' },
      { id: 2, title: 'UI Fix', description: 'Button overlap issue', assignee: 'Bob', status: 'In Progress' },
      { id: 3, title: 'Resolved Ticket', description: 'Email not sending', assignee: 'Charlie', status: 'Resolved' },
      { id: 4, title: 'Closed Ticket', description: 'Typo in footer', assignee: 'Alice', status: 'Closed' }
    ];

    // Filter active tickets
    const activeTickets = tickets.filter(ticket => ticket.status !== 'Closed');

    const container = document.getElementById('ticketContainer');

    if (activeTickets.length === 0) {
      container.innerHTML = '<p class="text-muted">No active tickets available.</p>';
    } else {
      const table = document.createElement('table');
      table.className = 'table table-striped table-bordered table-hover';

      table.innerHTML = `
        <thead class="table-light">
          <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Assignee</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          ${activeTickets.map(ticket => `
            <tr>
              <td>${ticket.id}</td>
              <td>${ticket.title.length > 12 ? ticket.title.slice(0,12) + '...' : ticket.title}</td>
              <td>${ticket.description.length > 12 ? ticket.description.slice(0,12) + '...' : ticket.description}</td>
              <td>${ticket.assignee}</td>
               <td>${ticket.status}</td>
              
            </tr>
          `).join('')}
        </tbody>
      `;

      container.innerHTML = '';
      container.appendChild(table);
    }

    // Back button handler
    document.getElementById('backBtn').addEventListener('click', () => {
      window.history.back();
    });
  </script>
</body>
</html>
