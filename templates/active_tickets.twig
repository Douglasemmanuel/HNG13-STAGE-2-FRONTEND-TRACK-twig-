<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Active Tickets</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table-responsive {
      max-height: 60vh;
      overflow-y: auto;
    }
    .badge {
      font-size: 0.85rem;
      padding: 0.4em 0.7em;
    }
    .container-header {
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      margin-bottom: 1.5rem;
    }
    .container-header button {
      position: absolute;
      left: 0;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <!-- Header -->
    <div class="container-header">
      <button id="backBtn" class="btn btn-primary btn-sm">Back</button>
      <h2 class="mb-0">Active Tickets</h2>
    </div>

    <!-- Ticket Table -->
    <div id="ticketContainer" class="table-responsive text-center">
      Loading tickets...
    </div>
  </div>

  <!-- Import your TicketStore -->
<script src="/js/TicketStore.js"></script>
  <script>
  document.getElementById('backBtn').addEventListener('click', () => {
    if (document.referrer) {
      window.history.back();
    } else {
      window.location.href = './dashboard';
    }
  });

  
</script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const container = document.getElementById('ticketContainer');
  const ticketStore = new TicketStore();

  // Function to render all active tickets (status !== 'Closed')
  function renderTickets() {
    const tickets = ticketStore.getTickets(); // Load from localStorage
    console.log(tickets)
    // Filter out closed tickets
    const activeTickets = tickets.filter(ticket => ticket.status !== 'Closed');

    console.log('Active tickets:', activeTickets); // Debugging

    if (!activeTickets || activeTickets.length === 0) {
      container.innerHTML = '<p class="text-muted">No active tickets available.</p>';
      return;
    }

    // Create table
    const table = document.createElement('table');
    table.className = 'table table-striped table-bordered table-hover';

    table.innerHTML = `
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Assignee</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        ${activeTickets.map(ticket => `
          <tr>
            <td>${ticket.id}</td>
            <td>${ticket.title}</td>
            <td>${ticket.description}</td>
            <td>${ticket.assignee}</td>
            <td>${ticket.status}</td>
           
          </tr>
        `).join('')}
      </tbody>
    `;

    container.innerHTML = '';
    container.appendChild(table);
  }

  // View a single ticket
  window.viewTicket = function(id) {
    const ticket = ticketStore.getTicket(id);
    if (!ticket) {
      alert('Ticket not found!');
      return;
    }

    alert(
      `üéüÔ∏è Ticket Details\n\n` +
      `ID: ${ticket.id}\n` +
      `Title: ${ticket.title}\n` +
      `Description: ${ticket.description}\n` +
      `Assignee: ${ticket.assignee}\n` +
      `Status: ${ticket.status}`
    );
  };

  // Delete a ticket
  window.deleteTicket = function(id) {
    const ticket = ticketStore.getTicket(id); // Get ticket details
    if (!ticket) {
      alert('Ticket not found!');
      return;
    }

    const confirmed = confirm(`Are you sure you want to delete the ticket titled "${ticket.title}"?`);
    if (confirmed) {
      ticketStore.deleteTicket(id);
      renderTickets(); // Re-render after deletion
    }
  };

  // Initial render
  renderTickets();
});
</script>

</body>
</html>
