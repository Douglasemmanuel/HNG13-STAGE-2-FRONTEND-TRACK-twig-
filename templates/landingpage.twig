  <style>
    .image-style {
      height: 32px;
      margin-right: 8px;
    }
    .hover-bg:hover {
      background-color: #f8f9fa;
    }
    .login-btn, .get-started-btn {
      border-radius: 5px;
    }
       .main-wrapper {
      max-width: 1440px;
      margin: 0 auto;
      overflow: hidden;
    }

    /* Hero Section */
    .hero-section {
      position: relative;
      background-color: #0d6efd;
      min-height: 550px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      text-align: center;
    }

    /* Wavy SVG Background */
    .wave-bg {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      line-height: 0;
      overflow: hidden;
      transform: translateY(1px);
    }
    .wave-bg svg {
      display: block;
      width: 100%;
      height: 100px;
    }

    /* Decorative Circle */
    .decorative-circle {
      position: absolute;
      top: 10%;
      right: 15%;
      width: 120px;
      height: 120px;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 50%;
      filter: blur(2px);
    }

    /* Hero Content */
    .hero-content img {
      width: 60px;
      height: auto;
      border-radius: 2rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      transition: transform 0.3s ease;
    }
    .hero-content img:hover {
      transform: scale(1.05);
    }

    .custom-btn,
    .custom-outline-btn {
      padding: 1rem 2.5rem;
      font-size: 1.25rem;
      border-radius: 12px;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .custom-btn {
      background-color: white;
      color: #0d6efd;
      border: 2px solid #0d6efd;
    }
    .custom-btn:hover {
      background-color: #0d6efd;
      color: white;
      border-color: #0d6efd;
    }

    .custom-outline-btn {
      border: 2px solid white;
      color: white;
    }
    .custom-outline-btn:hover {
      background-color: white;
      color: #0d6efd;
      border-color: white;
    }

    /* Feature Boxes */
    .features-section {
      background: #f9fafc;
    }
    .feature-card {
      border-radius: 16px;
      background: white;
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 2rem 1rem;
    }
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Footer */
    footer {
      background: #f1f3f6;
      border-top: 1px solid #e2e2e2;
      padding: 2rem 0;
    }

    /* Decorative Circles */
    .circle {
      position: absolute;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      z-index: 1;
    }
    .circle-1 {
      width: 150px;
      height: 150px;
      top: 50px;
      left: 20%;
    }
    .circle-2 {
      width: 200px;
      height: 200px;
      bottom: 50px;
      right: 10%;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .decorative-circle {
        width: 80px;
        height: 80px;
        top: 5%;
        right: 10%;
      }
