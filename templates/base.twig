<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TicketHub{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Optional JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <style>
        .image-style { height: 32px; margin-right: 8px; }
        .hover-bg:hover { background-color: #f8f9fa; }
        body { background-color: #f8f9fa; }
        .login-card { margin-top: 5rem; padding: 2rem; border-radius: 12px; }
    </style>

    {% block styles %}{% endblock %}
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm border-bottom py-3 fixed-top">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="{{ path('homepage') }}" class="navbar-brand d-flex align-items-center" style="text-decoration: none;">
                <img src="/images/logo2.jpeg" alt="Ticket Icon" class="image-style">
                <span class="fw-medium text-dark">TicketHub</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
                <span style="font-size: 1.5rem;">☰</span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarMenu">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link text-dark px-3 py-2 rounded hover-bg">Home</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-dark px-3 py-2 rounded hover-bg">Events</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-dark px-3 py-2 rounded hover-bg">Orders</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-dark px-3 py-2 rounded hover-bg">More</a></li>
                </ul>
            </div>
            <div class="d-none d-md-flex align-items-center gap-2">
                <a href="{{ path('login') }}" class="btn btn-outline-primary px-4 py-2 fw-semibold">Login</a>
                <a href="{{ path('register') }}" class="btn btn-primary px-4 py-2 fw-semibold">Get Started</a>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="pt-5 mt-5">
        {% block body %}{% endblock %}
    </main>

    <!-- FOOTER -->
    <footer class="bg-light py-4 mt-5 text-center border-top">
        <div class="container">
            <div class="row justify-content-center mb-4 g-3">
                <div class="col-6 col-md-auto"><a href="#" class="text-secondary text-decoration-none">About Us</a></div>
                <div class="col-6 col-md-auto"><a href="#" class="text-secondary text-decoration-none">Contact</a></div>
                <div class="col-6 col-md-auto"><a href="#" class="text-secondary text-decoration-none">Privacy Policy</a></div>
                <div class="col-6 col-md-auto"><a href="#" class="text-secondary text-decoration-none">Terms of Service</a></div>
            </div>
            <div class="d-flex justify-content-center gap-3 mb-3">
                <a href="#" class="text-secondary fs-4"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-secondary fs-4"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-secondary fs-4"><i class="bi bi-instagram"></i></a>
            </div>
            <p class="mb-0 mt-4 text-muted">© <span id="year"></span> TicketHub. All rights reserved.</p>
        </div>
    </footer>

   <script> document.getElementById("year").textContent = new Date().getFullYear(); const menuToggle = document.getElementById('menuToggle'); const menuIcon = document.getElementById('menuIcon'); const mobileMenu = document.getElementById('mobileMenu'); let isOpen = false; menuToggle.addEventListener('click', () => { isOpen = !isOpen; mobileMenu.classList.toggle('show', isOpen); menuIcon.textContent = isOpen ? '✕' : '☰'; }); function navigateTo(route) { window.location.href = route; } window.addEventListener('resize', () => { const isMobile = window.innerWidth < 768; if (!isMobile) { isOpen = false; mobileMenu.classList.remove('show'); menuIcon.textContent = '☰'; } }); </script>
    {% block scripts %}{% endblock %}
</body>
</html>
